{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop":true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es2017"
  },
  "include": [
    "src/**/*",
  ]
}
